#!/bin/sh
PROJECT=$1
URL=$2
TOKEN=$3
pip freeze > requirements.txt
cyclonedx-py -i requirements.txt -o bom.xml
BOM=$(base64 bom.xml |tr -d \\n)
POSTDATA="{\"project\":\"$PROJECT\",\"bom\":\"$BOM\"}"
curl -X "PUT" $PROJECT \
     -k \
     --noproxy "*" \
     -H 'Content-Type: application/json' \
     -H 'X-API-Key: '$TOKEN \
     -d @- "$HOST" <<CURL_DATA
        $POSTDATA
CURL_DATA
